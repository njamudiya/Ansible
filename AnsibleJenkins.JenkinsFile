pipeline {
    agent {
        node{
            label 'AnsibleController'
        }
    }   
 stages {
    stage ('PingTest'){
        steps {
             sh '''#!/bin/bash
             
             ansible-inventory --list -i "${Workspace}/Ansible/ansible-demos-excercises/Inventory/inventory.yml"
             ansible-playbook "${Workspace}/Ansible/ansible-demos-excercises/playbooks/playbook-pingtest.yml" -i "${Workspace}/Ansible/ansible-demos-excercises/Inventory/inventory.yml" -c local
             '''
            }
    } 
 }  
}
